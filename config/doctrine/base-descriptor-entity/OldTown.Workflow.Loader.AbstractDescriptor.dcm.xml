<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="OldTown\Workflow\Loader\AbstractDescriptor" inheritance-type="JOINED" table="abstract_descriptor">
        <discriminator-column name="type_descriptor" type="string"/>
        <id name="entityId" type="integer" column="entity_id" >
            <generator strategy="AUTO"/>
        </id>
        <field name="id" column="id" type="integer"/>

        <many-to-one field="parent" target-entity="OldTown\Workflow\Loader\AbstractDescriptor">
            <join-column name="parent_id" referenced-column-name="entity_id"/>
        </many-to-one>
    </entity>
</doctrine-mapping>