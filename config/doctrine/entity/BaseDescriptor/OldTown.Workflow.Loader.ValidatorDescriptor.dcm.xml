<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="OldTown\Workflow\Loader\ValidatorDescriptor" table="validator_descriptor">
        <field name="name" column="name" type="string"/>
        <field name="type" column="type" type="string"/>

        <one-to-many field="args" target-entity="OldTown\Workflow\Spi\Doctrine\Entity\Args\ValidatorArgs" mapped-by="validator" index-by="name"/>

    </entity>
</doctrine-mapping>