<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="OldTown\Workflow\Loader\WorkflowDescriptor" table="workflow_descriptor">
        <field name="workflowName" column="name" type="string"/>

        <one-to-many field="metaAttributes" target-entity="OldTown\Workflow\Spi\Doctrine\Entity\Args\WorkflowMetaAttributes" mapped-by="workflow" index-by="name"/>

        <one-to-many field="steps" target-entity="OldTown\Workflow\Spi\Doctrine\Entity\Step" mapped-by="workflowDescriptor"/>

        <one-to-many field="timerFunctions" target-entity="OldTown\Workflow\Spi\Doctrine\Entity\WorkflowTimerFunction" mapped-by="workflowDescriptor"/>

    </entity>
</doctrine-mapping>